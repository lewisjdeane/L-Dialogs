<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LDialogs_transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_custom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="24dp"
            tools:text="Title"
            android:textSize="22sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    
        <TextView
            android:id="@+id/dialog_custom_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="24dp"
            tools:text="Content"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    
        <LinearLayout
            android:id="@+id/dialog_custom_alongside_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="24dp">
    
            <Button
                android:id="@+id/dialog_custom_cancel"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/button_selector"
                android:textAllCaps="true"
                tools:text="Cancel"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible"/>
    
            <Button
                android:id="@+id/dialog_custom_confirm"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/button_selector"
                android:textAllCaps="true"
                tools:text="OK"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    
        <LinearLayout
            android:id="@+id/dialog_custom_stacked_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="24dp"
            android:visibility="gone"
            tools:visibility="visible">
    
            <Button
                android:id="@+id/dialog_custom_confirm_stacked"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:padding="8dp"
                android:background="@drawable/button_selector"
                android:textAllCaps="true"
                tools:text="Cancel"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible"/>
    
            <Button
                android:id="@+id/dialog_custom_cancel_stacked"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:padding="8dp"
                android:background="@drawable/button_selector"
                android:textAllCaps="true"
                tools:text="OK"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible"/>
    
        </LinearLayout>
    
    </LinearLayout>
</ScrollView>
